<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cok.dao.CustomerDao">
    <select id="getCustomerList" resultType="CustomerDto">
        select distinct subject, url from info where gnb_id = 3
    </select>
    
    <select id="getCustomerContentList" parameterType="string" resultType="CustomerDto">
        select * from info where subject like #{type}
    </select>

    <select id="getMainInfoList" resultType="MainInfoDto">
        select * from main_info
    </select>

    <select id="getServiceQnaList" resultType="ServiceQnaDto">
        select service.service_name, sq.content
        from service join service_question sq on service.id = sq.service_id;
    </select>

    <select id="getInfoList" parameterType="string" resultType="CustomerDto">
        select * from info where subject like #{subject}
    </select>

    <select id="getInfoDetail" parameterType="int" resultType="CustomerDto">
        select * from info where id = #{id}
    </select>

</mapper>