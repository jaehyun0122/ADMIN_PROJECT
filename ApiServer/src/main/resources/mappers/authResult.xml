<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.apiserver.dao.AuthResultDao">
    <select id="getReqInfo" parameterType="string" resultType="ResultResDto">
        select reqTxId, certTxId, reqEndDttm, telcoTycd,
               CAST(AES_DECRYPT(userNm, 'mykey') as CHAR) as userNm,
               AES_DECRYPT(phoneNo, 'mykey') as phoneNo,
               AES_DECRYPT(birthday, 'mykey') as birthday,
               AES_DECRYPT(gender, 'mykey') as gender,
               reqEndDttm
        from api_auth_req_info
        where certTxId like #{certTxId}
    </select>

    <select id="getReqEndDttm" parameterType="string" resultType="map">
        select reqEndDttm, signTarget from api_auth_req_info
        where certTxId like #{certTxId}
    </select>

    <insert id="insertResultInfo" parameterType="ResultResDto">
        insert into api_auth_result(
            reqTxId
            ,telcoTxId
            ,certTxId
            ,resultTycd
            ,resultDttm
            ,digitalSign
            ,ci
            ,phoneNo
            ,userNm
            ,birthday
            ,gender
            ,telcoTycd
        )values (
                #{reqTxId}
                ,#{telcoTxId}
                ,#{certTxId}
                ,#{resultTycd}
                ,#{resultDttm}
                ,#{digitalSign}
                ,#{ci}
                ,AES_ENCRYPT(#{phoneNo}, 'mykey')
                ,AES_ENCRYPT(#{userNm}, 'mykey')
                ,AES_ENCRYPT(#{birthday}, 'mykey')
                ,AES_ENCRYPT(#{gender}, 'mykey')
                ,#{telcoTycd}
                )
    </insert>
</mapper>