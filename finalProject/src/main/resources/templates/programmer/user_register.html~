<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="/assets/js/common.js"></script>
<script>
  // 이메일 중복환인
  let emailCheck = false;
  // 이메일 중복검사 요청 함수
  $("#duplicationCheck").on("click", function () {

    if($('input[name="email"]').val().trim() == '') {
      alert('이메일을 입력해 주세요.');
    }else{
      let param = {
        "email": $('input[name="email"]').val()
      }

      $.ajax({
        url: '/email/check',
        method: "POST",
        data: JSON.stringify(param),
        contentType: "application/json; charset=utf-8",
        dataType: 'json',
        beforeSend: function (xhr) {
          let csrfHeader = $("meta[name='_csrf_header']").attr("content");
          if (csrfHeader) {
            xhr.setRequestHeader(csrfHeader, $("meta[name='_csrf']").attr("content"));
          }
        },
        success: function (response) {
          alert("사용가능한 이메일 입니다.");
          $("#email").css("border-color", "green")
          emailCheck = true;
        },
        error: function (error) {
          alert("이미 사용중이거나 탈퇴한 이메일 입니다.");
          emailCheck = false;
        }
      })
    }

  })


  /*회원 가입 버튼 클릭*/
  $("#submitBtn").on("click", function () {

    if(validName() && validEmail() && validPhone() && validPassword() && passwordCheck()){
      let formData = {
        email: $('input[name="email"]').val(),
        name: $('input[name="name"]').val(),
        phoneNo: $('input[name="phone"]').val(),
        password: $('input[name="password"]').val()
      }

      $.ajax({
        url: '/register',
        method: "POST",
        data: JSON.stringify(formData),
        contentType: "application/json; charset=utf-8",
        dataType: 'json',
        beforeSend: function(xhr) {
          let csrfHeader = $("meta[name='_csrf_header']").attr("content");
          if (csrfHeader) {
            xhr.setRequestHeader(csrfHeader, $("meta[name='_csrf']").attr("content"));
          }
        },
        success: function (response) {
          alert("가입완료");
          location.href = "/"
        },
        error: function () {
          alert("서버 오류 입니다. 다시 시도해 주세요");
        }
      }) // end ajax

    } // end validate

  }) // end submit

</script>
