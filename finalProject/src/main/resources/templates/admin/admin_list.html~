<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>
  // 유저 상세 페이지 요청 함수
  function goDetail(email){
    window.location.href="/admin/detail?email="+email;
  }

  /*페이지 버튼 생성 10개씩 보기 고정*/
  function makePageBtn(){
    let totalData = [[${adminList.size()}]];
    /*총 버튼 개수*/
    let btnCnt = Math.ceil(totalData / 10);
    let pageBtn = '';
    /*버튼 개수 만큼 만들기*/
    for(let i = 1; i<=btnCnt; i++){
      pageBtn += `<button class="page-btn">${i}</button>`
    }

    $("#btnContainer").append(pageBtn);
  }

  $(document).ready(function (){
    makePageBtn();

    /*이름 검색 기능*/
    $("#keyword").keyup(function (){
      let word = $(this).val();
      $("#adminTable > tbody > tr").hide();
      // td:nth-child => 3번째요소에 word가 포함된것만 보여줌
      // 요소의 인덱스는 1부터 시작
      let temp = $("#adminTable > tbody > tr > td:nth-child(3):contains('"+word+"')");

      $(temp).parent().show();
      /*END 이름 검색 기능*/

    })
  })
</script>
